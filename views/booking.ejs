<%- include('includes/start.ejs') %>
<%- include('includes/lnavigation.ejs') %>

<div class="container mt-5">
    <form method="POST" action="/api/availablebuses">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="source">Source</label>
            <select id="source" class="form-control" name="source">
              <option selected>Select a City</option>
              <option value="Aligarh">Aligarh</option>
              <option value="Agra">Agra</option>
              <option value="Mathura">Mathura</option>
              <option value="Lucknow">Lucknow</option>
              <option value="Sultanpur">Sultanpur</option>
              <option value="Basti">Basti</option>
              <option value="Varanasi">Varanasi</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="locationTo">Destination</label>
        <select id="locationTo" class="form-control" name="destination">
          <option selected>Select a City</option>
          <option value="Aligarh">Aligarh</option>
          <option value="Agra">Agra</option>
          <option value="Mathura">Mathura</option>
          <option value="Lucknow">Lucknow</option>
          <option value="Sultanpur">Sultanpur</option>
          <option value="Basti">Basti</option>
          <option value="Varanasi">Varanasi</option>
        </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputDate">Date</label>
          <input type="date" class="form-control" id="inputDate" placeholder="Pickup a date" name="date">
        </div>
        <div class="form-group">
            <label for="inputVehicle">VehicleType</label>
            <select id="inputVehicle" class="form-control" name="vehicle_category">
              <option selected>Select Vehicle Category</option>
              <option value="BUS">BUS</option>
              <option value="CAB">CAB</option>
              <option value="BIKE">BIKE</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Check Availibility</button>
      </form>
</div>